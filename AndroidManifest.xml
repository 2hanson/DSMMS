<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsmms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="15" />
	<uses-permission android:name="jackpal.androidterm.permission.RUN_SCRIPT" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/activityTitlebar"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CtrlActivity" android:label="@string/ctrl_name"></activity>
    </application>

</manifest>